@using MarubeniCreditWeb.Data.Package.Comun;

<!-- Modal-Formularios-Financiero-->

<div class="modal-header justify-content-end no-align border-0">
    <div class="button-container  col-1 py-2 px-4">
        <button type="button"
                class="btn-close p-0"
                data-bs-dismiss="modal"
                aria-label="Close"></button>
    </div>
</div>

<form name="formPortSolicitud" id="formPortSolicitud">
    <div class="modal-body pt-0 px-md-4 px-0">
        <h3 class="modal-title fs-2 fw-bold" id="exampleModalLabel">
            Solicitud Portabilidad Financiera
        </h3>
        <p class="card-subtitle fs-5 fw-bold py-3">
            A continuación completa tus datos:
        </p>
        <!-- Form -->

        <div class="row fs-5">

            <!-- Personal Data -->
            <div class="col-md-6 col-12 my-2">
                <div class="align-items-center justify-content-between w-100">
                    <label for="nombrePortSoli" class="form-label mb-0 px-3">Nombre*</label>
                    <input type="text"
                           class="form-control w-100 border-0 p-3 input-text border-rad-10 fs-5 "
                           id="nombrePortSoli"
                           name="nombrePortSoli"
                           autocomplete="off"
                           maxlength="60"
                           placeholder="nombre y apellido" />
                </div>
            </div>
            <div class="col-md-6 col-12 my-2">
                <div class="align-items-center justify-content-between w-100">
                    <label for="exampleFormPortSolirolInput1" class="form-label mb-0 px-3">Rut*</label>
                    <input type="text"
                           class="form-control w-100 border-0 p-3 input-text border-rad-10 fs-5 rut"
                           id="rutPortSoli"
                           name="rutPortSoli"
                           onblur="ValidaRut()"
                           autocomplete="off"
                           maxlength="12"
                           placeholder="12.345.678-9" />
                </div>
            </div>
            <div class="col-md-6 col-12 my-2">
                <div class="align-items-center justify-content-between w-100">
                    <label for="telefonoPortSoli" class="form-label mb-0 px-3">Teléfono*</label>
                    <input type="text"
                           class="form-control w-100 border-0 p-3  border-rad-10 fs-5 input-number phone"
                           id="telefonoPortSoli"
                           name="telefonoPortSoli"
                           autocomplete="off"
                           maxlength="17"
                           placeholder="(+56) 2 9999-9999" />
                </div>
            </div>
            <div class="col-md-6 col-12 my-2">
                <div class="align-items-center justify-content-between w-100">
                    <label for="exampleFormPortSolirolInput1" class="form-label mb-0 px-3">Email*</label>
                    <input type="text"
                           class="form-control w-100 border-0 p-3 input-text border-rad-10 fs-5"
                           id="emailPortSoli"
                           name="emailPortSoli"
                           autocomplete="off"
                           maxlength="60"
                           placeholder="Pedro" />
                </div>
            </div>

            <!-- upload Button -->
            <p class="mb-0 px-2 text-black">Adjuntar Cédula de identidad por ambos lados *</p>
            <p class="mb-0 text-gray px-2">(Archivos menos de 2mb y formato png,jpg,pdf,doc o docx)</p>
            <!-- Adjuntar -->
            <div class="col-12 my-2">
                <div class="col-12 d-flex position-relative">
                    <div class="col-8 pe-3">
                        <input id="file1PortSoliName"
                               type="text"
                               class="form-control w-100 border-0 input-text border-rad-10 p-3 fs-5"
                               autocomplete="off"
                               placeholder="cedula.jpg" />
                    </div>
                    <div class="col-4">
                        <button id="btnFile1PortSoli" class="btn-grey text-white w-100 d-block border-0 p-2 border-rad-10">
                            <span class="only-desktop">Adjuntar archivo </span>
                            <img src="~/img/icons/clip.png">
                        </button>
                    </div>
                    <input class="file" type="file" name="file1PortSoli" id="file1PortSoli" accept="image/jpeg, image/png, application/pdf, application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document">
                </div>
            </div>
            <!-- Adjuntar -->
            <div class="col-12 my-2">
                <div class="col-12 d-flex position-relative">
                    <div class="col-8 pe-3">
                        <input id="file2PortSoliName"
                               type="text"
                               class="form-control w-100 border-0 input-text border-rad-10 p-3 fs-5"
                               autocomplete="off"
                               placeholder="cedula.jpg" />
                    </div>
                    <div class="col-4">
                        <button type="button" id="btnFile2PortSoli" class="btn-grey text-white w-100 d-block border-0 p-2 border-rad-10"><span class="only-desktop">Adjuntar archivo </span> <img src="~/img/icons/clip.png"></button>
                    </div>
                    <input class="file" type="file" name="file2PortSoli" id="file2PortSoli" accept="image/jpeg, image/png, application/pdf, application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document">
                </div>
            </div>
            <p class="mb-0 px-2 text-black">Adjuntar formulario completado *</p>
            <p class="mb-0 text-gray px-2">(Archivos menos de 2mb y formato png,jpg,pdf,doc o docx)</p>
            <!-- Adjuntar -->
            <div class="col-12 my-2">
                <div class="col-12 d-flex position-relative">
                    <div class="col-8 pe-3">
                        <input id="file3PortSoliName"
                               type="text"
                               class="form-control w-100 border-0 input-text border-rad-10 p-3 fs-5"
                               autocomplete="off"
                               placeholder="formulario portabilidad.pdf" />
                    </div>
                    <div class="col-4">
                        <button id="btnFile3PortSoli" class="btn-grey text-white w-100 d-block border-0 p-2 border-rad-10"><span class="only-desktop">Adjuntar archivo </span> <img src="~/img/icons/clip.png"></button>
                    </div>
                    <input class="file" type="file" name="file3PortSoli" id="file3PortSoli" accept="image/jpeg, image/png, application/pdf, application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document">
                </div>
            </div>
            <!-- Check Terms -->
            <div class="d-flex align-items-center px-1">
                <img class="m-2 min-icon" src="~/img/icons/red-down-button.svg" alt="">
                <p onclick="location.href='@Url.Action("DownloadFile", "ServicioCliente", new { codFile = (int)Objeto.Archivos.Formulario_Portabilidad })'" class="mb-0 text-red text-decoration-underline text-uppercase">descargar formulario</p>
            </div>
            <div class="form-check  mt-4 d-flex px-1">
                <input class="form-check-input terms" type="checkbox" value="" id="chkFirmaPortSoli" onclick="FirmaPortSoli()">
                <label class="form-check-label" for="flexCheckDefault">
                    Acepto que marcar la presente casilla constituirá firma del formulario de solicitud de portabilidad financiera, siempre que adjunte con su envío copia de mi cédula de identidad y haya completado correctamente los datos de identificación requeridos. Entiendo que Marubeni Credit podría solicitarme antecedentes adicionales para autenticar y verificar mi identidad, en caso de detectar inconsistencias en la información, en cumplimiento de la normativa vigente.
                </label>
            </div>
        </div>

    </div>
    <br />
    <div align="right" id="g-recaptcha-portSoli" class="g-recaptcha" data-callback="recaptchaPortSoliCallback" data-sitekey=@ViewBag.Key></div>
    <br />
    @Html.AntiForgeryToken()
</form>


<div class="modal-footer border-0 p-4">
    <div class="w-100 d-flex justify-content-sm-end justify-content-center">
        
        <div class="col-sm-7 col-12">
            <button type="button"
                    disabled="disabled"
                    id="btnFormPortSolicitud1"
                    onclick="GuardarPortSolicitud()"
                    @*data-bs-toggle="modal"
                    data-bs-target="#graciasModal"*@
                    class="w-100 btn btn-danger bg-red standard-btn border-red hover-normal inverse text-uppercase d-block adjust-btn btn-envio">
                enviar solicitud
            </button>
        </div>
    </div>
</div>

